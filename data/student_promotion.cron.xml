<odoo>
    <record id="ir_cron_auto_promote_students" model="ir.cron">
        <field name="name">Auto Promote Students to Next Year (May 1)</field>
        <field name="model_id" ref="model_student_master"/>
        <field name="state">code</field>
        <field name="code">model.action_auto_promote_next_year()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
