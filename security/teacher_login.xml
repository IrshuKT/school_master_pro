<odoo>
    <data noupdate="1">
        <record id="group_teacher_user" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Restrict teachers to only Student Master and Exam Master</field>
        </record>

        <record id="student_master_teacher_rule" model="ir.rule">
            <field name="name">Student Master: Teacher Course-Year-Batch Filter</field>
            <field name="model_id" ref="school_master_pro.model_student_master"/>
            <field name="groups" eval="[(4, ref('school_master_pro.group_teacher_user'))]"/>
            <field name="domain_force">
                [('course_year_batch_key', 'in', user.teacher_id.course_year_batch_ids.mapped('key'))]
            </field>
        </record>

         <record id="exam_master_rule_teacher_only" model="ir.rule">
            <field name="name">Teacher: Only See Own Exams</field>
            <field name="model_id" ref="model_exam_result"/>
            <field name="domain_force">[('teacher_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('school_master_pro.group_teacher_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>


</odoo>