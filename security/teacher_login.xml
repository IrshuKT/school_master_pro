<odoo>
    <data noupdate="1">

        <!-- Teacher Group -->
        <record id="group_teacher_user" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Restrict teachers to only their own Student Master and Exam Master</field>
        </record>

        <!-- Teacher rule: can only see their students -->
        <record id="student_teacher_filter_rule" model="ir.rule">
            <field name="name">Teacher: Only see own students (class teacher or same course/year)</field>
            <field name="model_id" ref="school_master_pro.model_student_master"/>
            <field name="groups" eval="[(4, ref('school_master_pro.group_teacher_user'))]"/>
            <field name="domain_force">
                ['|',
                ('teacher_id.user_id', '=', user.id),
                ('key', 'in', user.teacher_id.course_year_batch_ids.mapped('key'))
                ]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>


        <!-- Admins: full unrestricted access -->
        <record id="student_admin_full_access_rule" model="ir.rule">
            <field name="name">Admin: Full access to students</field>
            <field name="model_id" ref="school_master_pro.model_student_master"/>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="exam_master_rule_class_teacher" model="ir.rule">
            <field name="name">Class Teacher/Subject Teacher: See exam results of allowed students</field>
            <field name="model_id" ref="school_master_pro.model_exam_result"/>
            <field name="groups" eval="[(4, ref('school_master_pro.group_teacher_user'))]"/>
            <field name="domain_force">
                ['|',
                ('student_id.teacher_id.user_id', '=', user.id),
                ('student_id.key', 'in', user.teacher_id.course_year_batch_ids.mapped('key'))
                ]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>


        33
    </data>
</odoo>
