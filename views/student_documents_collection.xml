<odoo>
    <data>
        <!-- Tree View -->
        <!-- Tree view for Document Collections -->
        <record id="view_student_documents_collection_tree" model="ir.ui.view">
            <field name="name">student.documents.collection.tree</field>
            <field name="model">student.documents.collection</field>
            <field name="arch" type="xml">
                <list>
                    <field name="student_id"/>
                    <field name="collection_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form view for Document Collections -->
        <record id="view_student_documents_collection_form" model="ir.ui.view">
            <field name="name">student.documents.collection.form</field>
            <field name="model">student.documents.collection</field>
            <field name="arch" type="xml">
                <form>
                    <div class="custom-sticky-header" position="sticky">
                        <header>
                            <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                                    invisible="is_locked"/>
                            <button name="action_edit" type="object" string="Edit" class="btn btn-outline-info"
                                    invisible="not is_locked"/>
                            <button type="object" name="action_back" class="btn btn-secondary"
                                    invisible="not id" string="⬅️ Back"/>
                            <field name="is_locked" invisible="1"/>
                            <field name="state" widget="statusbar"
                                   statusbar_visible="collected,partially_returned,returned"/>
                        </header>
                    </div>
                    <sheet>
                        <div class="row align-items-center py-3"
                             style="min-height:100px; border-bottom: 2px solid #000;">
                            <div class="col-6 d-flex align-items-center">
                                <div class="me-3">
                                    <field name="company_logo" widget="image" class="o_logo_company"
                                           style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                           alt="Company Logo" readonly="1"/>
                                </div>
                                <div>
                                    <h5 class="m-0 fw-bold text-dark">
                                        <field name="company_id"/>
                                    </h5>
                                </div>
                            </div>
                            <div class="col-6 d-flex justify-content-end align-items-center">
                                <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                    DOCUMENT COLLECTION
                                </h3>
                            </div>
                        </div>
                        <div class="row" style="margin-top:60px">
                            <group>
                                <field name="student_id"/>
                            </group>
                            <notebook>
                                <page string="Documents">
                                    <field name="document_line_ids" readonly="is_locked">
                                        <list editable="bottom">
                                            <field name="document_type"/>
                                            <field name="collected_date"/>
                                            <field name="returned_date"/>
                                            <field name="note"/>
                                        </list>
                                    </field>
                                </page>
                            </notebook>
                        </div>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="student_document_collection_action_window">
            <field name="name">DOCUMENTS COLLECTION</field>
            <field name="res_model">student.documents.collection</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'create_name': 'Add Document Collection'}</field>
        </record>
    </data>
</odoo>