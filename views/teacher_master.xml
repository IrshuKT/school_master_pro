<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="teacher_master_list">
            <field name="name">teacher_master list</field>
            <field name="model">teacher.master</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="contact_no"/>
                    <field name="designation_id"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="teacher_master_form">
            <field name="name">teacher_master form</field>
            <field name="model">teacher.master</field>
            <field name="arch" type="xml">
                <form>
                    <div class="custom-sticky-header" position="sticky">

                        <header>
                            <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                                    invisible="is_locked"/>
                            <button name="action_edit" type="object" string="Edit"
                                    invisible="not is_locked"/>
                            <button type="object" name="action_back" class="btn btn-secondary"
                                    invisible="not id" string="⬅️ Back"/>

                            <field name="is_locked" invisible="1"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                        </header>
                    </div>
                    <sheet>

                        <div class="row align-items-center py-3"
                             style="min-height:100px; border-bottom: 2px solid #000;">
                            <!-- Left Side: Company Logo & Name -->
                            <div class="col-6 d-flex align-items-center">
                                <div class="me-3">
                                    <field name="company_logo" widget="image" class="o_logo_company"
                                           style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                           alt="Company Logo" readonly="1"/>
                                </div>
                                <div>
                                    <h5 class="m-0 fw-bold text-dark">
                                        <field name="company_id"/>
                                    </h5>
                                </div>
                            </div>

                            <!-- Right Side: Student Master Title -->
                            <div class="col-6 d-flex justify-content-end align-items-center">
                                <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                    TEACHER MASTER
                                </h3>
                            </div>
                        </div>
                        <div class="row" style="margin-top:60px">
                            <div class="col-6">
                                <group>
                                    <field name="name" readonly="is_locked"/>
                                    <field name="gender" readonly="is_locked"/>
                                    <field name="doj" readonly="is_locked"/>
                                    <field name="year_of_service" readonly="is_locked"/>
                                    <field name="contact_no" readonly="is_locked"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="emergency_contact" readonly="is_locked"/>
                                    <field name="address" readonly="is_locked"/>
                                    <field name="designation_id" readonly="is_locked"/>
                                    <field name="user_id" readonly="is_locked"/>
                                    <!--                                  <field name="std" widget="many2many_tags"/>-->
                                    <field name="active" readonly="is_locked"/>
                                </group>
                            </div>
                        </div>
                        <notebook>
                            <page string="Course &amp; Year">
                                <field name="course_year_batch_ids" readonly="is_locked">
                                    <list editable="bottom">
                                        <field name="course_id"/>
                                        <field name="year_id" domain="[('course_id', '=', course_id)]"/>
                                    </list>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                    <chatter/>
                </form>

            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="teacher_master_action_window">
            <field name="name">TEACHER MASTER</field>
            <field name="res_model">teacher.master</field>
            <field name="view_mode">list,form</field>
        </record>



    </data>
</odoo>
