<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="course_subject_list">
        <field name="name">Course Subject</field>
        <field name="model">exam.subject</field>
        <field name="arch" type="xml">
            <list>

                <field name="course_id" readonly="is_locked"/>
                <field name="year_id" readonly="is_locked"/>
                <field name="name" readonly="is_locked"/>

            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="course_subject_form">
        <field name="name">Course Subject</field>
        <field name="model">exam.subject</field>
        <field name="arch" type="xml">
            <form>
                <div class="custom-sticky-header" position="sticky">
                    <header>
                        <button name="action_edit" type="object" string="Edit"
                                invisible="not is_locked"/>
                        <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                                invisible="is_locked"/>
                        <button type="object" name="action_back" class="btn btn-secondary"
                                invisible="not id" string="⬅️ Back"/>
                        <field name="is_locked" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                </div>
                <sheet>
                    <div class="row align-items-center py-3"
                         style="min-height:100px; border-bottom: 2px solid #000;">
                        <div class="col-6 d-flex align-items-center">
                            <div class="me-3">
                                <field name="company_logo" widget="image" class="o_logo_company"
                                       style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                       alt="Company Logo" readonly="1"/>
                            </div>
                            <div>
                                <h5 class="m-0 fw-bold text-dark">
                                    <field name="company_id"/>
                                </h5>
                            </div>
                        </div>
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                 COURSE SUBJECT
                            </h3>
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px;background-colour:grey;">
                        <div class="col-6">
                            <group>
                                <field name="course_id" readonly="is_locked"/>
                                <field name="year_id" readonly="is_locked"/>
                                <field name="name" readonly="is_locked"/>
                            </group>
                        </div>
                        <div class="col-6">
                            <group>
                            </group>
                        </div>
                    </div>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_course_subject" model="ir.actions.act_window">
        <field name="name">Subject Master</field>
        <field name="res_model">exam.subject</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>