<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_finance_head_tree" model="ir.ui.view">
        <field name="name">finance.head.tree</field>
        <field name="model">finance.head</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="balance"/>
            </list>
        </field>
    </record>
    <record id="view_finance_head_form" model="ir.ui.view">
        <field name="name">finance.head.form</field>
        <field name="model">finance.head</field>
        <field name="arch" type="xml">
            <form string="Finance Head">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="balance" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Transactions">
                            <field name="transaction_ids">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="account_type"/>
                                    <field name="description"/>
                                    <field name="direction"/>
                                    <field name="amount"/>
                                    <field name="signed_amount" readonly="1"/>
                                    <field name="running_balance" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_finance_head" model="ir.actions.act_window">
        <field name="name">Finance Heads</field>
        <field name="res_model">finance.head</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>