<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_finance_head_tree" model="ir.ui.view">
        <field name="name">finance.head.tree</field>
        <field name="model">finance.head</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
            </list>
        </field>
    </record>
    <record id="view_finance_head_form" model="ir.ui.view">
        <field name="name">finance.head.form</field>
        <field name="model">finance.head</field>
        <field name="arch" type="xml">
            <form string="Finance Head">
                <header>
                    <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                            invisible="is_locked"/>
                    <button name="action_edit" type="object" string="Edit"
                            invisible="not is_locked"/>
                    <button type="object" name="action_back" class="btn btn-secondary"
                            invisible="not id" string="⬅️ Back"/>
                    <field name="is_locked" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>


                </header>

                <sheet>
                    <div class="row align-items-center py-3" style="min-height:100px; border-bottom: 2px solid #000;">
                        <!-- Left Side: Company Logo & Name -->
                        <div class="col-6 d-flex align-items-center">
                            <div class="me-3">
                                <field name="company_logo" widget="image" class="o_logo_company"
                                       style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                       alt="Company Logo" readonly="1"/>
                            </div>
                            <div>
                                <h5 class="m-0 fw-bold text-dark">
                                    <field name="company_id"/>
                                </h5>
                            </div>
                        </div>

                        <!-- Right Side: Student Master Title -->
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                Ledger Head
                            </h3>
                        </div>
                    </div>
                    <div class="col-6" style="margin-top:40px ">
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                        </group>
                    </div>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="action_finance_head" model="ir.actions.act_window">
        <field name="name">Finance Heads</field>
        <field name="res_model">finance.head</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>