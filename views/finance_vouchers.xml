<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Voucher List View -->
    <record id="view_finance_voucher_list" model="ir.ui.view">
        <field name="name">finance.voucher.list</field>
        <field name="model">finance.voucher</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="voucher_type"/>
                <field name="account_type"/>
                <field name="head_id"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <!-- Voucher Form View -->
    <record id="view_finance_voucher_form" model="ir.ui.view">
        <field name="name">finance.voucher.form</field>
        <field name="model">finance.voucher</field>
        <field name="arch" type="xml">
            <form>

                    <header>
                        <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                                invisible="is_locked"/>
                        <button name="action_edit" type="object" string="Edit" class="btn btn-outline-info"
                                invisible="not is_locked"/>
                        <button type="object" name="action_back" class="btn btn-secondary"
                                invisible="not id" string="⬅️ Back"/>
                        <field name="is_locked" invisible="1"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>

                <sheet>
                    <div class="row align-items-center py-3" style="min-height:100px; border-bottom: 2px solid #000;">
                        <!-- Left Side: Company Logo & Name -->
                        <div class="col-6 d-flex align-items-center">
                            <div class="me-3">
                                <field name="company_logo" widget="image" class="o_logo_company"
                                       style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                       alt="Company Logo" readonly="1"/>
                            </div>
                            <div>
                                <h5 class="m-0 fw-bold text-dark">
                                    <field name="company_id"/>
                                </h5>
                            </div>
                        </div>

                        <!-- Right Side: Student Master Title -->
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                Voucher
                            </h3>
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px;background-colour:grey;">

                        <group>
                            <field name="name" readonly="is_locked"/>
                            <field name="date" readonly="is_locked"/>
                            <field name="voucher_type" readonly="is_locked"/>
                            <field name="account_type" readonly="is_locked"/>
                            <field name="head_id" readonly="is_locked"/>
                            <field name="partner_id" readonly="is_locked"/>
                            <field name="description" readonly="is_locked"/>
                            <field name="amount" readonly="is_locked"/>
                        </group>
                    </div>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <!-- Voucher Action -->
    <record id="action_finance_voucher" model="ir.actions.act_window">
        <field name="name">Vouchers</field>
        <field name="res_model">finance.voucher</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
