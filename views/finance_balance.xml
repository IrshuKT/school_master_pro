<!-- finance_balance_kanban.xml -->
<odoo>

        <record id="view_finance_transaction_tree" model="ir.ui.view">
            <field name="name">finance.transaction.tree</field>
            <field name="model">finance.transaction</field>
            <field name="arch" type="xml">
                <list create="false" edit="false" delete="false">
                    <field name="date"/>
                    <field name="account_type"/>
                    <field name="description"/>
                    <field name="direction"/>
                    <field name="amount"/>
                    <field name="running_balance"/>
                </list>
            </field>
        </record>



    <record id="action_cash_book" model="ir.actions.act_window">
        <field name="name">Cash Book</field>
        <field name="res_model">finance.transaction</field>
        <field name="view_mode">list</field>
        <field name="domain">[('account_type','=','cash')]</field>
        <field name="context">{'default_account_type':'cash'}</field>
    </record>

    <record id="action_bank_book" model="ir.actions.act_window">
        <field name="name">Bank Book</field>
        <field name="res_model">finance.transaction</field>
        <field name="view_mode">list</field>
        <field name="domain">[('account_type','=','bank')]</field>
        <field name="context">{'default_account_type':'bank'}</field>
    </record>

</odoo>
