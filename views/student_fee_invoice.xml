<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="student_invoice_list">
        <field name="name">Student Invoice</field>
        <field name="model">student.fee.invoice</field>
        <field name="arch" type="xml">
            <list default_order=" invoice_date desc, id desc">
                <field name="invoice_date"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="year_id"/>
                <field name="amount"/>
                <field name="description"/>
            </list>
        </field>
    </record>
    <record model="ir.ui.view" id="student_invoice_form">
        <field name="name">Student Invoice</field>
        <field name="model">student.fee.invoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                            invisible="not show_save_button"/>
                    <button name="action_edit" type="object" string="Edit"
                            invisible="not show_edit_button"/>
                    <button type="object" name="action_back" class="btn btn-secondary"
                            invisible="not id" string="⬅️ Back"/>
                    <field name="show_save_button" invisible="1"/>
                    <field name="show_edit_button" invisible="1"/>
                    <field name="is_locked" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>

                </header>
                <sheet>
                    <div class="row align-items-center py-3" style="min-height:100px; border-bottom: 2px solid #000;">
                        <!-- Left Side: Company Logo & Name -->
                        <div class="col-6 d-flex align-items-center">
                            <div class="me-3">
                                <field name="company_logo" widget="image" class="o_logo_company"
                                       style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                       alt="Company Logo" readonly="1"/>
                            </div>
                            <div>
                                <h5 class="m-0 fw-bold text-dark">
                                    <field name="company_id"/>
                                </h5>
                            </div>
                        </div>

                        <!-- Right Side: Student Master Title -->
                        <div class="col-6 d-flex justify-content-end align-items-center">
                            <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                Invoice
                            </h3>
                        </div>
                    </div>
                    <div class="row">
                        <group>
                            <group string="Invoice Scope">
                                <field name="student_id"
                                       options="{'no_create': True}"
                                       placeholder="Select to create for one student"/>
                                <field name="course_id"
                                       options="{'no_create': True}"
                                       placeholder="Or select course for all students"/>
                                <field name="year_id"
                                       domain="[('course_id','=',course_id)]"
                                       options="{'no_create': True}"
                                       placeholder="Optional - restrict to year"/>
                            </group>

                            <group string="Invoice Details">
                                <field name="description"/>
                                <field name="invoice_type"/>
                                <field name="invoice_date"/>
                                <field name="amount"/>
                            </group>
                        </group>

                        <group>
                            <button name="action_generate_invoices"
                                    string="Generate Invoices"
                                    type="object"
                                    class="btn-primary"
                                        invisible="id"/>
                            <button string="Cancel"
                                    class="btn-secondary"
                                    special="cancel"/>
                        </group>
                    </div>
                </sheet>


                <chatter/>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_student_invoice" model="ir.actions.act_window">
        <field name="name">Invoice Details</field>
        <field name="res_model">student.fee.invoice</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->

</odoo>