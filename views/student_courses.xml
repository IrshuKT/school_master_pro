<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="student_course_list">
            <field name="name">Courses</field>
            <field name="model">student.class.name</field>
            <field name="arch" type="xml">
                <list>
                    <field name="course_no" string="Course ID" readonly="is_locked"/>
                    <field name="name" string="Course Name" readonly="is_locked"/>
                    <field name="duration" readonly="is_locked"/>
                    <field name="admission_fee" readonly="is_locked"/>
                    <field name="max_count" readonly="is_locked"/>
                    <field name="state" readonly="is_locked"/>
                </list>
            </field>
        </record>


        <record model="ir.ui.view" id="student_course_form">
            <field name="name">Courses</field>
            <field name="model">student.class.name</field>
            <field name="arch" type="xml">
                <form>
                    <div class="custom-sticky-header" position="sticky">

                        <header>
                            <button name="action_edit" type="object" string="Reset to draft"
                                    invisible="not is_locked"/>
                            <button name="action_save" type="object" string="Save" class="btn btn-outline-success"
                                    invisible="is_locked"/>
                            <button type="object" name="action_back" class="btn btn-secondary"
                                    invisible="not id" string="⬅️ Back"/>
                            <field name="is_locked" invisible="1"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                        </header>
                    </div>
                    <sheet>
                        <div class="row align-items-center py-3"
                             style="min-height:100px; border-bottom: 2px solid #000;">
                            <div class="col-6 d-flex align-items-center">
                                <div class="me-3">
                                    <field name="company_logo" widget="image" class="o_logo_company"
                                           style="max-width: 80px; max-height: 80px; object-fit: contain;"
                                           alt="Company Logo" readonly="1"/>
                                </div>
                                <div>
                                    <h5 class="m-0 fw-bold text-dark">
                                        <field name="company_id"/>
                                    </h5>
                                </div>
                            </div>
                            <div class="col-6 d-flex justify-content-end align-items-center">
                                <h3 class="m-0 fw-bold text-primary" style="letter-spacing: 1px;">
                                    STUDENT COURSE
                                </h3>
                            </div>
                        </div>
                        <div class="row" style="margin-top:60px">
                            <div class="col-6">
                                <group>
                                    <field name="course_no" string="Course ID" readonly="is_locked"/>
                                    <field name="name" placeholder=" Ex: Electronic Mechanic" string="Course Name"
                                           readonly="is_locked"/>
                                    <field name="duration" placeholder=" Ex: Duration for Electronic Mechanic"
                                           readonly="is_locked"/>
                                    <field name="active" readonly="is_locked"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group>
                                    <field name="term_one_fee" readonly="is_locked"/>
                                    <field name="term_two_fee" readonly="is_locked"/>
                                    <field name="term_three_fee" readonly="is_locked"/>
                                    <field name="admission_fee" readonly="is_locked"/>
                                    <field name="max_count" readonly="is_locked"/>
                                </group>
                            </div>
                        </div>
                        <notebook>
                            <page string="Years">
                                <field name="year_line_ids" readonly="is_locked">
                                    <list editable="bottom">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="student_course_action_window">
            <field name="name">Courses</field>
            <field name="res_model">student.class.name</field>
            <field name="view_mode">list,form</field>
        </record>


    </data>
</odoo>
