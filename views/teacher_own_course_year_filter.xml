<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_my_students" model="ir.actions.act_window">
        <field name="name">My Students</field>
        <field name="res_model">student.master</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('teacher_id.user_id', '=', uid)]</field>
    </record>

    <record id="action_students_by_course_year" model="ir.actions.act_window">
        <field name="name">Students by Course/Year</field>
        <field name="res_model">student.master</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'group_by': ['course_id','year_id']}</field>
        <field name="domain">[('teacher_id.user_id', '!=', uid)]</field>
    </record>

    <menuitem id="menu_my_students"
              name="My Students"
              parent="menu_student_master"
              action="action_my_students"
              sequence="2"/>

    <menuitem id="menu_students_by_course_year"
              name="Students by Course/Year"
              parent="menu_student_master"
              action="action_students_by_course_year"
              sequence="3"/>

</odoo>